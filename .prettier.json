{
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*+.html", "*.css", "*.scss", "*.less"],
      "options": {
        "singleQuote": false,
        "endOfLine": "lf",
        "semi": true,
        "trailingComma": "es5",
        "useTabs": false,
        "tabWidth": 2,

        "check-code": "npm run linter && npm run prettier"
      }
    }
  ]
}
