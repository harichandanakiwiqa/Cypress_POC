{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {},
  "ignorePatterns": ["node_modules", "/public/**", "/resources/**"],
  "prettier/prettier": "error",
  "no-unused-vars": "warn",
  "no-console": "off",
  "func-names": "off",
  "no-process-exit": "off",
  "object-shorthand": "off",
  "class-methods-use-this": "off",
  "no-useless-escape": "off",
  "array-callback-return": "off",
  "no-plusplus": "off"
}
